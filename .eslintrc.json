{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin: prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script",
    "ecmaFeatures": { "jsx": false }
  },
  "plugins": ["prettier"],
  "ignorePatterns": "/node_module",
  "rules": {
    "prettier/prettier": "error"
  }
}
